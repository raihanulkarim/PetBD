@model PetBD.Models.Product

@{
    ViewData["Title"] = "Edit"; 
    var cats = (List<Category>)ViewData["categories"];
}

<div class="container mt-3">
   <div class="text-center">
        <h1>Update</h1>
        <h4>Product</h4>
        <hr />
   </div>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="IsActive" class="control-label">Status:</label>
                    @if(Model.IsActive == true){
                        <span class="text-success fw-bold ">Active</span>
                    }else{
                        <span class="text-danger fw-bold ">Deactivated</span>
                    }
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" /> @if(Model.IsActive != true){
                            <span class="text-success"> Mark as Active</span>
                        }else{
                            <span class="text-success"> Mark as Deactive</span>
                        }
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
               <div class="form-group">
                    <label asp-for="IsFeatured" class="control-label">IsFeatured:</label>
                    @if(Model.IsFeatured == true){
                        <span class="text-success fw-bold ">Featured</span>
                    }else{
                        <span class="text-danger fw-bold ">Not Featured</span>
                    }
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsFeatured" /> @if(Model.IsFeatured != true){
                            <span class="text-success"> Mark as Featured</span>
                        }else{
                            <span class="text-success"> Mark as Not Featured</span>
                        }
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
              <div class="form-group">
                        <label asp-for="CatID">Update Category: </label>
                        <select asp-for="CatID" required class="form-control" asp-items='new SelectList(cats,"Id","Name")'>
                            <option value="0">Select Category</option>    
                        </select>
                        <span asp-validation-for="CatID" class="text-danger"></span>
                    </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary mt-3" />
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
