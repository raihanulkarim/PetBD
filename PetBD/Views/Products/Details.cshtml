@model PetBD.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-3">
		<div class="text-center">
			<h1>Product Details</h1>
		</div>
		<div class="card product-details-card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content mb-2">
						  <div class="tab-pane active" id="pic-1"><img src="http://placekitten.com/400/252" /></div>
						  <div class="tab-pane" id="pic-2"><img src="http://placekitten.com/400/252" /></div>
						  <div class="tab-pane" id="pic-3"><img src="http://placekitten.com/400/252" /></div>
						  <div class="tab-pane" id="pic-4"><img src="http://placekitten.com/400/252" /></div>
						  <div class="tab-pane" id="pic-5"><img src="http://placekitten.com/400/252" /></div>
						</div>
						<ul class="preview-thumbnail nav nav-tabs mb-2">
						  <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
						  <li><a data-target="#pic-2" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
						</ul>
						
					</div>
					<div class="details col-md-6">
						<h3 class="product-title">@Model.Name</h3>
                        <p>Status:
                            @if(Model.IsActive == true){
                                <span class="text-success fw-bold ">Active</span>
                                }else{
                                    <span class="text-danger fw-bold ">Deactivated</span>
                                }
                          </p>
                          <p>IsFeatured:
                            @if(Model.IsFeatured == true){
                                <span class="text-success fw-bold ">Featured</span>
                                }else{
                                    <span class="text-danger fw-bold ">Not Featured</span>
                                }
                          </p>
                        <p>Created On: <span>@Model.CreatedDate</span></p>
                        <p>Modified On: <span>@Model.ModifiedDate</span></p>
                        <p>Category: <span>@Model.Category.Name</span></p>
                        <p>Quantity: <span>@Model.Quantity</span></p>
                          <hr />
                          <p>@Model.Description</p>
						<div>
							<a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
							<a onclick="window.history.back();" class="btn btn-danger">Back</a>
						</div>
					</div>
				</div>
			</div>
		</div>	
</div>
