@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>PetBD-Admin</title>
    <!-- base:css -->
    <link rel="stylesheet" href="~/admin/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/admin/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/admin/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/admin/images/favicon.png" />
  </head>
<body>
     <div class="container-scroller">
		<!-- partial:partials/_horizontal-navbar.html -->
    <div class="horizontal-menu">
      <nav class="navbar top-navbar col-lg-12 col-12 p-0">
        <div class="container-fluid">
          <div class="navbar-menu-wrapper d-flex align-items-center justify-content-between ">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo " asp-action="index" asp-controller="admin"><h2><img src="~/admin/images/logo.png" alt="logo"/></h2></a>
                <a class="navbar-brand brand-logo-mini" asp-action="index" asp-controller="admin"><img src="~/admin/images/logo.png" alt="logo"/></a>
            </div>
            <ul class="navbar-nav navbar-nav-right">
                
                <li class="nav-item nav-profile dropdown">
                  <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" id="profileDropdown">
                    <span class="nav-profile-name">Admin</span>
                    <span class="online-status"></span>
                    <img src="~/admin/images/faces/face28.png" alt="profile"/>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                      <a class="dropdown-item">
                        <i class="mdi mdi-logout text-primary"></i>
                        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                        </form>
                      </a>
                  </div>
                </li>
            </ul>
            <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="horizontal-menu-toggle">
              <span class="mdi mdi-menu"></span>
            </button>
          </div>
        </div>
      </nav>
      <nav class="bottom-navbar navbar-dark bg-dark">
        <div class="container">
            <ul class="nav page-navigation">
              <li class="nav-item ">
                <a class="nav-link  text-white" asp-action="index" asp-controller="admin">
                  <i class="mdi mdi-file-document-box menu-icon  text-white"></i>
                  <span class="menu-title">Dashboard</span>
                </a>
              </li>
			  <li class="nav-item">
				  <a class="nav-link  text-white" asp-action="index" asp-controller="categories"> 
                      <i class="mdi mdi-file-document-box menu-icon  text-white"></i>
                     <span class="menu-title">Catogories</span>
				  </a>
			  </li>
                <li class="nav-item">
					<a class="nav-link  text-white" asp-action="index" asp-controller="products"> 
					    <i class="mdi mdi-file-document-box menu-icon  text-white"></i>
                        <span class="menu-title">Products</span>
                    </a>
				</li>
                <li class="nav-item">
					<a class="nav-link  text-white" asp-action="index" asp-controller="sliders">
					    <i class="mdi mdi-file-document-box menu-icon text-white"></i>
                        <span class="menu-title">Sliders</span>
                    </a>
				</li>
                <li class="nav-item">
					<a class="nav-link text-white" asp-action="index" asp-controller="orders">
					    <i class="mdi mdi-file-document-box menu-icon text-white"></i>
                        <span class="menu-title">Orders</span>
                    </a>
				</li>
            </ul>
        </div>
      </nav>
    </div>
    <!-- partial -->
		<div class="container-fluid page-body-wrapper">
			<div class="main-panel">
				<div class="content-wrapper">
                      <div class="row">
                        @RenderBody()
                       </div>
				</div>
				<!-- content-wrapper ends -->
				<!-- partial:partials/_footer.html -->
				<footer class="footer">
          <div class="footer-wrap">
            <div class="text-center">
              <span class="text-muted text-center text-sm ">Copyright © <a class=" text-decoration-none" href="https://www.petbd.com/" target="_blank">www.PetBD.com</a> @DateTime.Now.Year</span>
            </div>
          </div>
        </footer>
				<!-- partial -->
			</div>
			<!-- main-panel ends -->
		</div>
		<!-- page-body-wrapper ends -->
    </div>
   <!-- base:js -->
    <script src="~/admin/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/admin/js/template.js"></script>
    <!-- endinject -->
    <!-- plugin js for this page -->
    <!-- End plugin js for this page -->
    <script src="~/admin/vendors/chart.js/Chart.min.js"></script>
    <script src="~/admin/vendors/progressbar.js/progressbar.min.js"></script>
		<script src="~/admin/vendors/chartjs-plugin-datalabels/chartjs-plugin-datalabels.js"></script>
		<script src="~/admin/vendors/justgage/raphael-2.1.4.min.js"></script>
		<script src="~/admin/vendors/justgage/justgage.js"></script>
    <script src="~/admin/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- Custom js for this page-->
    <script src="~/admin/js/dashboard.js"></script>
    <!-- End custom js for this page-->
     @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>